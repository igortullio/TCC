ScreenManagement:
	#transition: FadeTransition()
	Home:
	Cadastro:
	Login:
	Mesas:
	Esqueci:
	Opcao:
<Home>:
	name: "home"
	Label:
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.8}
		font_size: "50sp"
		text: "Aplicativo de Reserva"
	Button:
		size_hint: .4, .1
		pos_hint: {"x":.30, "y":.5}
		text: "Login"
		font_size: "30sp"
		on_release: app.root.trocar_tela("login")
	Button:
		size_hint: .4, .1
		pos_hint: {"x":.30, "y": .3}
		text: "Criar conta"
		font_size: "30sp"
		on_release: app.root.trocar_tela("cadastro")
	Button:
		id: btnExit
		size_hint: .4, .1
		pos_hint: {"x":.30, "y": .1}
		text: "Sair"
		font_size: "30sp"
		on_release: app.stop()
<Cadastro>:
	name: "cadastro"
	Label:
		id: lb_cadastro1
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.9}
		font_size: "25sp"
		text: ""
	Label:
		id: lb_cadastro
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.8}
		font_size: "40sp"
		text: "Crie a sua conta:"
	TextInput:
		id: ti_usuario                
		size_hint: .4, .05
		pos_hint: {"x":.3, "y":.6}
		font_size: "15sp"
		multiline: False
		hint_text: "Nome do usuario"
		text: ""
	TextInput:
		id: ti_senha                       
		size_hint: .4, .05
		pos_hint: {"x":.3, "y":.5}
		font_size: "15sp"
		multiline: False
		password: True
		hint_text: "Digite a senha"      
		text: "" 
	TextInput:
		id: ti_email                       
		size_hint: .4, .05
		pos_hint: {"x":.3, "y":.4}
		font_size: "15sp"
		hint_text: "Digite o seu e-mail"
		text: "" 
	Button:
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .3}
		text: "Cadastrar"
		on_release:
		    if ti_usuario.text == "" or ti_senha.text == "" or ti_email.text == "" : lb_cadastro1.text = "Preencha todos os campos."
			else: root.realizar_cadastro()
			ti_usuario.text = ""
			ti_senha.text = ""
			ti_email.text = ""			
	Button:
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .1}
		text: "Voltar"
		on_release:
			ti_usuario.text = ""
			ti_senha.text = ""
			lb_cadastro1.text = ""
			app.root.trocar_tela("home")
<Login>:
	name: "login"
	Label:
		id: lb_primeiro
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.9}
		font_size: "30sp"
	Label:
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.7}
		font_size: "40sp"
		text: "Login"
	TextInput:
		id: ti_usuario                
		size_hint: .4, .05
		pos_hint: {"x":.3, "y":.6}
		font_size: "15sp"
		multiline: False
		hint_text: "Nome do usuario"
	TextInput:
		id: ti_senha
		size_hint: .4, .05
		pos_hint: {"x":.3, "y":.5}
		font_size: "15sp"
		multiline: False
		password: True
		hint_text: "Digite a senha"
	Button:
	    background_color: 0, 0, 0, 0
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.4}
		font_size: "20sp"
		text: "Esqueci a senha"
		on_release:
		    app.root.trocar_tela("esqueci")
	Button:
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .3}
		text: "Entrar"        
		on_release:
			if root.login_valido(): app.root.trocar_tela("mesas"); app.root.get_screen("mesas").oi(); lb_primeiro.text = ""
            else: lb_primeiro.text = "Login com erro. Tente novamente."
            ti_usuario.text = ""
            ti_senha.text = ""
	Button:
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .1}
		text: "Voltar"
		on_release:
			ti_usuario.text = ""
			ti_senha.text = ""
			app.root.trocar_tela("home")
			lb_primeiro.text = ""
<Opcao>:
	name:"opcao"
	Label:
		id: lb_primeiro
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.9}
		font_size: "30sp"
		text: "Tela de Reserva"
	Label:
		id: lb_segundo
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.7}
		font_size: "20sp"
		text: "Selecione a quantidade de lugares:"
	Label:
		id: lb_terceiro
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.5}
		font_size: "20sp"
		text: "Selecione o tempo desejado:"
	Button:
		id: btn_Confirmar
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .2}
		text: "Confirmar"
	Button:
		size_hint: .3, .05
		pos_hint: {"x":.35, "y": .1}
		text: "Voltar"
		on_release:
			app.root.trocar_tela("mesas")
<Mesas>:
    name:"mesas"
    BoxLayout:
        ScrollView:
            do_scroll_x:False
            do_scroll_y:True
            GridLayout:
                id: outros
                cols:5
                size_hint_y: None
                row_default_height: '100dp'
                row_force_default: True
                height: self.minimum_height
	Label:
		id: lb_selecione
		size_hint: .1, .1
		pos_hint: {"x":.45, "y":.071}
		font_size: "22sp"
		text: "SELECIONE A MESA"
    Button:
        size_hint: .3, .05
        pos_hint: {"x":.35, "y": .022}
        text: "Sair"
        on_release:
            app.root.trocar_tela("login")
	Button:
		name:"mesa3"
	    background_color: 0, 0, 0, 0
		size_hint: .1, .1
		pos_hint: {"x":.25, "y":.36}
		font_size: "20sp"
		on_release:
			app.root.trocar_tela("opcao")
	Button:
		name:"mesa4"
	    background_color: 0, 0, 0, 0
		size_hint: .1, .1
		pos_hint: {"x":.65, "y":.36}
		font_size: "20sp"
		on_release:
			app.root.trocar_tela("opcao")
	Button:
		name:"mesa1"
	    background_color: 0, 0, 0, 0
		size_hint: .1, .1
		pos_hint: {"x":.25, "y":.70}
		font_size: "20sp"
		on_release:
			app.root.trocar_tela("opcao")
	Button:
		name:"mesa2"
	    background_color: 0, 0, 0, 0
		size_hint: .1, .1
		pos_hint: {"x":.65, "y":.70}
		font_size: "20sp"
		on_release:
			app.root.trocar_tela("opcao")		
<Esqueci>:
    name: "esqueci"
    Label:
        size_hint: .1, .1
        pos_hint: {"x":.45, "y":.7}
        font_size: "30sp"
        text: "Digite seu e-mail:"
    TextInput:
        id: ti_usuario
        size_hint: .4, .05
        pos_hint: {"x":.3, "y":.6}
        font_size: "15sp"
        multiline: False
        hint_text: "E-mail"
    Button:
        size_hint: .3, .05
        pos_hint: {"x":.35, "y": .5}
        text: "Enviar"
        on_release:
    Button:
        size_hint: .3, .05
        pos_hint: {"x":.35, "y": .1}
        text: "Voltar"
        on_release:
            app.root.trocar_tela("login")
